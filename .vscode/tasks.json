{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": "cmake . && make",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task to build with CMake"
        },
        {
            "label": "Clean with CMake",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task to clean with CMake"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}